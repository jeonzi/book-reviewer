scalar DateTime

type User {
  id: ID! @unique
  username: String! @unique
  email: String! @unique
  password: String! 
  books: [Book!]!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like {
  id: ID! @unique
  user: User!
  book: Book!
}

type Book {
  id: ID! @unique
  book_name: String!
  publisher: String!
  author: Author!
  pubdate: DateTime! @default(value: "2019-04-12")
  description: String! @default(value: "")
  photos: [Photo!]
  phrases: [Phrase!]
  review: [Review!]!
  likes: [Like!]!
  createdAt: DateTime!
}

type Author {
  id: ID! @unique
  author_name: String!
  books: [Book!]!
}

type Photo {
  id : ID! @unique
  url : String!
  user: User!
}

type Phrase {
  id: ID! @unique
  user: User!
  text: String! @default(value: "")
  page: Int!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Review {
  id: ID! @unique
  user: User!
  title: String
  text: String! @default(value: "")
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Comment {
  id: ID! @unique
  text: String!
  book: Book!
}